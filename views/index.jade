    #hme.section
      .bg
      .logo
      .bottom
        .centering
          .information
            h1 survive today to fight for tomorrow
            p play mobius dimension now!
          a.play(href='http://play.' + host) play now
          a.button(href='#about')
            svg(viewBox='0 0 200 200', alt='play now')
              circle(cx='100', cy='100', r='90', fill='none', stroke-width='8', stroke='#fff')
              polygon(points='70, 145 145, 100 70, 55', transform='translate(200, 0) rotate(90)', fill='none', stroke-width='8', stroke='#fff')
    #abt.section
      .symbol
      .title about
      .description.centering
        .column
          .ships
            .ship
              img.centering(data-src='/imgs/game/ships/ubaidian/ubaidian-x01.png')
            .ship
              img.centering(data-src='/imgs/game/ships/ubaidian/ubaidian-x02.png')
            .ship
              img.centering(data-src='/imgs/game/ships/ubaidian/ubaidian-x03.png')
