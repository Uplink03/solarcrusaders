extends layouts/base
block content
  include partials/facebook

  #content
    .share(id='share')
      .box
        .facebook
          a.fb-like(data-href='http://solarcrusaders.com', data-layout='button', data-action='like', data-show-faces='false', data-share='true')
        .twitter
          a.twitter-share-button(href='https://twitter.com/share', data-url='http://solarcrusaders.com', data-text='Solar Crusaders, an open world FTL-like online video game', data-via='SolarCrusaders', data-hashtags='gamedev', data-count='none')
        .tumblr
          a.tumblr-share-button(data-color='white', data-notes='none', data-href='http://solarcrusaders.com' href='https://embed.tumblr.com/share')
      .box.text
        a(href='http://blog.solarcrusaders.com/') solar crusaders blog
    .dialog
      .box
        h1 watch on youtube
        a(href='https://www.youtube.com/watch?v=3mURrVKerHg')
          img(src='/imgs/game/play.png')
        div(id='dialog')
    .modal(id='registration-login')
      .box
        .register(id='registration-start')
          h1 player registration
          h2 welcome to the universe
          p username:
          .input
            input(type='text', id='registration-username')
          p e-mail:
          .input
            input(type='text', id='registration-email')
          p password:
          .input
            input(type='password', id='registration-pass1')
          p re-enter password:
          .input
            input(type='password', id='registration-pass2')
          .error(id='registration-error')
          .buttons
            button(type='button', id='registration-submit') Complete Registration
            button(type='button', id='registration-cancel') Cancel
        .completed(id='registration-done')
          h1 registration completed
          h2 you will recieve further instructions once testing begins!
          .splash
          .buttons
            button(type='button', id='registration-cancel') Done

